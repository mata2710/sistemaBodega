@{
    ViewData["Title"] = "Perfil de Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #111 !important;
    }

    .form-control[disabled], .form-control:disabled {
        background-color: #222;
        color: #fff;
    }
</style>

<div class="container-fluid bg-dark py-4 px-4" style="min-height: 100vh;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-warning text-dark fw-semibold d-flex align-items-center">
                    <i class="bi bi-person-circle me-2 fs-5"></i> Perfil de Usuario
                </div>
                <div class="card-body bg-dark text-white">
                    <div class="text-center mb-4">
                        <img src="/img/perfil.png" class="rounded-circle border border-secondary" alt="Foto de Perfil" width="120" height="120">
                        <h4 class="mt-3">Nombre de Usuario</h4>
                        <p class="text-muted">Rol: Administrador</p>
                        <a href="#" class="btn btn-outline-warning btn-sm mt-2">Cambiar Foto</a>
                    </div>

                    <form>
                        <div class="mb-3">
                            <label for="nombre" class="form-label text-white">Nombre completo</label>
                            <input type="text" class="form-control border-secondary" id="nombre" placeholder="Juan Pérez" disabled>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label text-white">Correo electrónico</label>
                            <input type="email" class="form-control border-secondary" id="email" placeholder="juan@example.com" disabled>
                        </div>

                        <div class="mb-3">
                            <label for="telefono" class="form-label text-white">Teléfono</label>
                            <input type="text" class="form-control border-secondary" id="telefono" placeholder="+506 8888-9999" disabled>
                        </div>

                        <div class="mb-3">
                            <label for="rol" class="form-label text-white">Rol</label>
                            <input type="text" class="form-control border-secondary" id="rol" placeholder="Administrador" disabled>
                        </div>

                        <a href="#" class="btn btn-warning">Editar Información</a>
                        <a href="#" class="btn btn-outline-light ms-2">Cambiar Contraseña</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

