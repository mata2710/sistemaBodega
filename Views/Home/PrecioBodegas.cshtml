@{
    ViewData["Title"] = "Precios de Bodegas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #111 !important;
    }
</style>

<div class="container-fluid bg-dark py-4 px-4" style="min-height: 100vh;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white">Gestión de Precios de Bodegas</h2>
        <a href="#" class="btn btn-warning fw-semibold">
            <i class="bi bi-plus-circle me-2"></i>Nuevo Precio
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-warning text-dark fw-semibold">
            <i class="bi bi-currency-dollar me-2"></i> Lista de Precios
        </div>
        <div class="card-body bg-dark text-white rounded-bottom">
            <div class="table-responsive">
                <table class="table table-dark table-striped table-hover align-middle mb-0">
                    <thead class="table-secondary text-dark">
                        <tr>
                            <th>Tipo de Bodega</th>
                            <th>Medidas (m²)</th>
                            <th>Precio Mensual</th>
                            <th>Última Actualización</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Fila de ejemplo vacía -->
                        <tr>
                            <td colspan="5" class="text-center text-muted">No hay precios registrados aún.</td>
                        </tr>

                        <!-- Ejemplo de precio simulado -->
                        @*
                        <tr>
                            <td>Pequeña</td>
                            <td>10 m²</td>
                            <td>₡45.000</td>
                            <td>2025-05-01</td>
                            <td>
                                <a href="#" class="btn btn-sm btn-outline-warning me-1"><i class="bi bi-pencil"></i></a>
                                <a href="#" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></a>
                            </td>
                        </tr>
                        *@
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

