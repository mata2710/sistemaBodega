@model SistemaBodega.Models.Cliente

@{
    ViewData["Title"] = "Detalles del cliente";
}

<h1 class="mt-3">Detalles del cliente</h1>
<hr />

<dl class="row">
    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nombre)</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

    <dt class="col-sm-3">Cédula jurídica</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.Identificacion)</dd>

    <dt class="col-sm-3">Teléfono</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>

    <dt class="col-sm-3">Teléfono secundario</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.TelefonoSecundario)</dd>

    <dt class="col-sm-3">Correo electrónico</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

    <dt class="col-sm-3">Representante legal</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.RepresentanteLegal)</dd>

    <dt class="col-sm-3">Actividad de la empresa</dt>
    <dd class="col-sm-9">@Html.DisplayFor(model => model.Actividad)</dd>
</dl>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning text-white">Editar</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Volver al listado</a>
</div>
