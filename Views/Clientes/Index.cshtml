@model IEnumerable<SistemaBodega.Models.Cliente>
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Clientes";
    var rol = Context.Session.GetString("Rol");
}

<h1 class="mt-4">Clientes</h1>

@if (rol == "Administrador")
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Crear nuevo cliente</a>
    </p>
}

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Identificacion)</th>
            <th>@Html.DisplayNameFor(model => model.Telefono)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Identificacion)</td>
                <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>
                    @if (rol == "Administrador")
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm ms-1">Eliminar</a>
                    }
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm ms-1">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>

