@model SistemaBodega.Models.Cliente
@{
    ViewData["Title"] = "Crear cliente";
}

<div class="container py-4">
    <div class="d-flex align-items-end justify-content-between flex-wrap gap-2 mb-3">
        <div>
            <h1 class="page-title mb-1">Crear cliente</h1>
            <p class="text-muted mb-0">Registra la información del cliente jurídico para su administración.</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">Volver al listado</a>
    </div>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4 p-md-5">
            <form asp-action="Create" method="post" novalidate>
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4" role="alert" style="display:@(ViewData.ModelState.IsValid ? "none" : "block")">
                    Revisa los campos marcados en rojo.
                </div>

                <!-- Datos generales -->
                <div class="row g-3">
                    <div class="col-12">
                        <label asp-for="Nombre" class="form-label fw-semibold">Nombre comercial / Razón social</label>
                        <input asp-for="Nombre" class="form-control form-control-lg" placeholder="Ej.: Industrias ABC S.A." autocomplete="organization" />
                        <span asp-validation-for="Nombre" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Identificacion" class="form-label fw-semibold">Cédula jurídica</label>
                        <input asp-for="Identificacion" class="form-control form-control-lg" placeholder="3-101-123456" inputmode="numeric" />
                        <div class="form-text">Formato sugerido: #-###-######</div>
                        <span asp-validation-for="Identificacion" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Actividad" class="form-label fw-semibold">Actividad de la empresa</label>
                        <input asp-for="Actividad" class="form-control form-control-lg" placeholder="Ej.: Almacenaje y logística" />
                        <span asp-validation-for="Actividad" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="RepresentanteLegal" class="form-label fw-semibold">Representante legal</label>
                        <input asp-for="RepresentanteLegal" class="form-control form-control-lg" placeholder="Nombre completo" autocomplete="name" />
                        <span asp-validation-for="RepresentanteLegal" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label fw-semibold">Correo electrónico</label>
                        <input asp-for="Email" class="form-control form-control-lg" placeholder="contacto@empresa.com" autocomplete="email" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Telefono" class="form-label fw-semibold">Teléfono</label>
                        <input asp-for="Telefono" class="form-control form-control-lg" placeholder="8888-8888" inputmode="tel" />
                        <span asp-validation-for="Telefono" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TelefonoSecundario" class="form-label fw-semibold">Teléfono secundario</label>
                        <input asp-for="TelefonoSecundario" class="form-control form-control-lg" placeholder="Opcional" inputmode="tel" />
                        <span asp-validation-for="TelefonoSecundario" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-accent btn-lg fw-semibold">Guardar cliente</button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

