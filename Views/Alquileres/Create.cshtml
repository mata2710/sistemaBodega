@model SistemaBodega.Models.Alquiler

@{
    ViewData["Title"] = "Create";
}

<h1>Crear nuevo alquiler</h1>

<h4>Alquiler</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="mb-3">
                <label asp-for="ClienteId" class="form-label">Cliente</label>
                <select asp-for="ClienteId" class="form-select" asp-items="ViewBag.ClienteId">
                    <option value="">Seleccione...</option>
                </select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="BodegaId" class="form-label">Bodega</label>
                <select asp-for="BodegaId" class="form-select" asp-items="ViewBag.BodegaId" id="bodegaSelect">
                    <option value="">Seleccione...</option>
                </select>
                <span asp-validation-for="BodegaId" class="text-danger"></span>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="FechaInicio" class="form-label"></label>
                    <input asp-for="FechaInicio" class="form-control" type="date" />
                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="FechaFin" class="form-label"></label>
                    <input asp-for="FechaFin" class="form-control" type="date" />
                    <span asp-validation-for="FechaFin" class="text-danger"></span>
                </div>
            </div>

            <!-- Datos económicos (tomados de Bodega y editables si hace falta) -->
            <div class="row g-3 mt-1">
                <div class="col-md-4">
                    <label asp-for="AreaM2" class="form-label"></label>
                    <input asp-for="AreaM2" class="form-control" id="areaM2" type="number" step="0.01" min="0" />
                    <span asp-validation-for="AreaM2" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="PrecioPorM2" class="form-label"></label>
                    <input asp-for="PrecioPorM2" class="form-control" id="precioM2" type="number" step="0.01" min="0" />
                    <span asp-validation-for="PrecioPorM2" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Precio estimado</label>
                    <input id="precioPreview" class="form-control" type="text" value="0.00" readonly />
                </div>
            </div>

            <div class="row g-3 mt-1">
                <div class="col-md-6">
                    <label asp-for="AumentoAnualPorcentaje" class="form-label"></label>
                    <input asp-for="AumentoAnualPorcentaje" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="AumentoAnualPorcentaje" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <!-- PrecioAlquiler se calcula en el servidor; lo mostramos solo para referencia -->
                    <label class="form-label">Precio actual</label>
                    <input class="form-control" value="0.00" readonly />
                </div>
            </div>

            <div class="mb-3 mt-3">
                <label asp-for="Observaciones" class="form-label"></label>
                <textarea asp-for="Observaciones" class="form-control" rows="3" placeholder="Observaciones del contrato..."></textarea>
                <span asp-validation-for="Observaciones" class="text-danger"></span>
            </div>

            <!-- Contrato -->
            <div class="mb-3">
                <label class="form-label">Contrato (PDF/imagen)</label>
                <input asp-for="ContratoArchivo" type="file" class="form-control" accept=".pdf,.png,.jpg,.jpeg" />
                <span asp-validation-for="ContratoArchivo" class="text-danger"></span>
            </div>

            <div class="form-check mb-2">
                <input asp-for="RenovacionAutomatica" class="form-check-input" />
                <label asp-for="RenovacionAutomatica" class="form-check-label"></label>
            </div>

            <div class="form-check mb-3">
                <input asp-for="Activo" class="form-check-input" />
                <label asp-for="Activo" class="form-check-label"></label>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Volver al listado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        (function(){
            const $bodega = document.getElementById('bodegaSelect');
            const $area   = document.getElementById('areaM2');
            const $pm2    = document.getElementById('precioM2');
            const $prev   = document.getElementById('precioPreview');

            function toNumber(v){
                if (typeof v === 'string') v = v.replace(',', '.');
                const n = parseFloat(v);
                return isNaN(n) ? 0 : n;
            }
            function updatePreview(){
                const total = toNumber($area.value) * toNumber($pm2.value);
                $prev.value = total.toFixed(2);
            }

            $area.addEventListener('input', updatePreview);
            $pm2.addEventListener('input', updatePreview);

            // Autocompletar desde Bodega
            if ($bodega) {
                $bodega.addEventListener('change', function(){
                    const id = this.value;
                    if(!id){ $area.value=''; $pm2.value=''; updatePreview(); return; }
                    fetch('@Url.Action("GetBodegaData", "Alquileres")?id=' + id)
                        .then(r => r.ok ? r.json() : null)
                        .then(data => {
                            if(!data) return;
                            $area.value = parseFloat(data.areaM2).toFixed(2);
                            $pm2.value  = parseFloat(data.precioPorM2).toFixed(2);
                            updatePreview();
                        })
                        .catch(() => {});
                });
            }

            updatePreview();
        })();
    </script>
}

