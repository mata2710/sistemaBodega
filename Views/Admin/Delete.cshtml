@model SistemaBodega.Models.Usuario
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Eliminar usuario";
    var rolSesion = Context?.Session?.GetString("Rol");

    // Valores saneados para mostrar o marcar como Pendiente
    string? nombre = string.IsNullOrWhiteSpace(Model?.NombreCompleto) ? null : Model!.NombreCompleto;
    string? correo = string.IsNullOrWhiteSpace(Model?.Correo) ? null : Model!.Correo;
    string? rol = string.IsNullOrWhiteSpace(Model?.Rol) ? null : Model!.Rol;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<style>
    /* ===== Estructura general ===== */
    .section-title {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: .75rem;
        padding-left: .65rem;
        border-left: 4px solid #00809D;
    }

    .card.shadow-sm {
        border: 1px solid rgba(0,0,0,.06);
    }

    .page-tools {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: .75rem;
    }

        .page-tools .btn {
            margin-top: 0 !important;
        }

    /* Aviso suave de peligro */
    .alert-danger-soft {
        background: #fdecea;
        color: #b42318;
        border: 1px solid #f5c2c7;
        border-radius: .5rem;
        padding: .75rem 1rem;
    }

    /* Grid para listas */
    .dl-grid {
        display: grid;
        grid-template-columns: 180px 1fr;
        row-gap: .35rem;
        column-gap: 1rem;
    }

        .dl-grid dt {
            color: #6c757d;
            font-weight: 600;
            display: flex;
            align-items: center;
        }

        .dl-grid dd {
            margin: 0;
        }

    @@media (max-width:768px) {
        .dl-grid {
            grid-template-columns: 1fr;
        }
    }

    /* Badge "Pendiente" (color solicitado) */
    .badge-pending {
        background: #EAC8A6;
        color: #3d2b12;
        border: 1px solid #EAC8A6;
        padding: .2rem .55rem;
        border-radius: 999px;
        font-weight: 600;
        font-size: .85rem;
    }

    /* Evitar desbordes en correos largos */
    .break-anywhere {
        overflow-wrap: anywhere;
        word-break: break-word;
        hyphens: auto;
    }
</style>

<div class="page-tools mt-3 mb-3">
    <h2 class="mb-0 text-danger"><i class="bi bi-exclamation-triangle me-1"></i> Eliminar usuario</h2>
    <a asp-controller="Admin" asp-action="Usuarios" class="btn btn-sm btn-outline-secondary">
        <i class="bi bi-arrow-left-short"></i> Volver al listado
    </a>
</div>

<div class="alert-danger-soft mb-3">
    <strong>Acción permanente:</strong> esta operación eliminará el registro del usuario.
</div>

<div class="row g-3">
    <!-- Columna principal: Resumen -->
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="section-title">Resumen</div>
                <dl class="dl-grid">
                    <dt><i class="bi bi-person me-2"></i>Nombre</dt>
                    <dd>
                        @if (nombre == null)
                        {
                            <span class="badge-pending">Pendiente</span>
                        }
                        else
                        {
                            @nombre
                        }
                    </dd>

                    <dt><i class="bi bi-person-gear me-2"></i>Rol</dt>
                    <dd>
                        @if (rol == null)
                        {
                            <span class="badge-pending">Pendiente</span>
                        }
                        else
                        {
                            @rol
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <!-- Columna lateral: Contacto -->
    <div class="col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="section-title">Contacto</div>
                <dl class="dl-grid">
                    <dt><i class="bi bi-envelope me-2"></i>Correo electrónico</dt>
                    <dd class="break-anywhere">
                        @if (correo == null)
                        {
                            <span class="badge-pending">Pendiente</span>
                        }
                        else
                        {
                            @correo
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<form asp-controller="Admin" asp-action="EliminarUsuario" asp-route-id="@Model.Id" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" name="Id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash3"></i> Eliminar
    </button>
    <a asp-controller="Admin" asp-action="Usuarios" class="btn btn-secondary ms-2">
        <i class="bi bi-x-circle"></i> Cancelar
    </a>
</form>
