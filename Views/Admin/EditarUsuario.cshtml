@model SistemaBodega.Models.Usuario

@{
    ViewData["Title"] = "Editar usuario";

    // Valores iniciales para el preview (saneados)
    string? nombre = string.IsNullOrWhiteSpace(Model?.NombreCompleto) ? null : Model!.NombreCompleto;
    string? correo = string.IsNullOrWhiteSpace(Model?.Correo) ? null : Model!.Correo;
    string? rol = string.IsNullOrWhiteSpace(Model?.Rol) ? null : Model!.Rol;

    // ✅ Foto actual (si no hay, usa la de perfil por defecto)
    var fotoUrl = Url.Content(string.IsNullOrWhiteSpace(Model?.FotoFilePath)
        ? "~/img/perfil.png"
        : "~/" + Model.FotoFilePath);
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<style>
    /* ===== Estructura y layout ===== */
    .section-title {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: .75rem;
        padding-left: .65rem;
        border-left: 4px solid #00809D;
    }

    .card.shadow-sm {
        border: 1px solid rgba(0,0,0,.06);
    }

    .page-tools {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: .75rem;
    }

        .page-tools .btn {
            margin-top: 0 !important;
        }

    /* ===== Botones ===== */
    .btn-save {
        background: #437057 !important;
        color: #fff !important;
        border: 0 !important;
    }

        .btn-save:hover {
            filter: brightness(.95);
            color: #fff !important;
            background: #3a614c !important;
        }

        .btn-save:focus {
            box-shadow: 0 0 0 .2rem rgba(67,112,87,.25) !important;
        }

    .btn-cancel {
        background: #DC3C22 !important;
        color: #fff !important;
        border: 0 !important;
    }

        .btn-cancel:hover {
            background: #C3341E !important;
            color: #fff !important;
        }

        .btn-cancel:focus {
            box-shadow: 0 0 0 .2rem rgba(220,60,34,.25) !important;
        }

    /* ===== Input groups con iconos ===== */
    .input-group-text i {
        opacity: .85;
    }

    /* ===== Grid mini para resumen ===== */
    .dl-grid {
        display: grid;
        grid-template-columns: 160px 1fr;
        row-gap: .35rem;
        column-gap: 1rem;
    }

        .dl-grid dt {
            color: #6c757d;
            font-weight: 600;
            display: flex;
            align-items: center;
        }

        .dl-grid dd {
            margin: 0;
        }

    /* ===== Badge "Pendiente" ===== */
    .badge-pending {
        background: #EAC8A6;
        color: #3d2b12;
        border: 1px solid #EAC8A6;
        padding: .2rem .55rem;
        border-radius: 999px;
        font-weight: 600;
        font-size: .85rem;
    }

    /* Evitar desbordes en correos largos del preview (ajuste solicitado) */
    #pvCorreo {
        overflow-wrap: anywhere;
        word-break: break-word;
        hyphens: auto;
    }

    /* ✅ Estilos mínimos para la foto (sin tocar el resto) */
    .avatar-mini {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        object-fit: cover;
        border: 1px solid #e5e7eb;
    }
</style>

<div class="page-tools mt-3 mb-3">
    <h2 class="mb-0">Editar usuario</h2>
    <a asp-controller="Admin" asp-action="Usuarios" class="btn btn-sm btn-outline-secondary">
        <i class="bi bi-arrow-left-short"></i> Volver al listado
    </a>
</div>

<div class="row g-3">
    <!-- Columna izquierda: formulario -->
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <!-- ✅ enctype para permitir subir imagen -->
                <form asp-controller="Admin" asp-action="EditarUsuario" method="post" enctype="multipart/form-data" novalidate>
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <input type="hidden" name="Id" value="@Model.Id" />

                    <!-- ✅ Bloque para cambiar la imagen (solo agregado) -->
                    <div class="mb-3 d-flex align-items-center gap-3">
                        <img id="pvFoto" src="@fotoUrl" alt="Foto" class="avatar-mini" />
                        <div>
                            <label for="inFoto" class="btn btn-sm btn-outline-secondary mb-1">
                                <i class="bi bi-image"></i> Cambiar foto
                            </label>
                            <input type="file" id="inFoto" name="Foto" accept="image/*" class="d-none" />
                            <div class="form-text">PNG, JPG (máx. 2&nbsp;MB)</div>
                        </div>
                    </div>
                    <!-- /bloque imagen -->

                    <div class="mb-3">
                        <label for="inNombre" class="form-label">Nombre completo</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <input type="text"
                                   name="NombreCompleto"
                                   id="inNombre"
                                   class="form-control"
                                   value="@Model.NombreCompleto"
                                   placeholder="Nombre y apellidos"
                                   required />
                        </div>
                        <span class="text-danger small">@Html.ValidationMessage("NombreCompleto")</span>
                    </div>

                    <div class="mb-3">
                        <label for="inCorreo" class="form-label">Correo electrónico</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="email"
                                   name="Correo"
                                   id="inCorreo"
                                   class="form-control"
                                   value="@Model.Correo"
                                   placeholder="usuario@dominio.com"
                                   autocomplete="email"
                                   required />
                        </div>
                        <span class="text-danger small">@Html.ValidationMessage("Correo")</span>
                    </div>

                    <div class="mb-3">
                        <label for="inRol" class="form-label">Rol</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-gear"></i></span>
                            <select asp-for="Rol" name="Rol" id="inRol" class="form-select" required>
                                <option value="Empleado">Empleado</option>
                                <option value="Administrador">Administrador</option>
                            </select>
                        </div>
                        <span class="text-danger small">@Html.ValidationMessage("Rol")</span>
                    </div>

                    <div class="d-flex flex-wrap gap-2 mt-3">
                        <button type="submit" class="btn btn-save">
                            <i class="bi bi-check2"></i> Guardar cambios
                        </button>
                        <a asp-controller="Admin" asp-action="Usuarios" class="btn btn-cancel">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Columna derecha: preview en vivo -->
    <div class="col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="section-title">Resumen (preview)</div>
                <dl class="dl-grid">
                    <dt>Nombre</dt>
                    <dd id="pvNombre">
                        @if (nombre == null)
                        {
                            <span class="badge-pending">Pendiente</span>
                        }
                        else
                        {
                            @nombre
                        }
                    </dd>

                    <dt>Correo</dt>
                    <dd id="pvCorreo">
                        @if (correo == null)
                        {
                            <span class="badge-pending">Pendiente</span>
                        }
                        else
                        {
                            @correo
                        }
                    </dd>

                    <dt>Rol</dt>
                    <dd id="pvRol">
                        @if (rol == null)
                        {
                            <span class="badge-pending">Pendiente</span>
                        }
                        else
                        {
                            @rol
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        (function () {
            const PEND = '<span class="badge-pending">Pendiente</span>';

            const $nombre = document.getElementById('inNombre');
            const $correo = document.getElementById('inCorreo');
            const $rol    = document.getElementById('inRol');

            const $pvNombre = document.getElementById('pvNombre');
            const $pvCorreo = document.getElementById('pvCorreo');
            const $pvRol    = document.getElementById('pvRol');

            const val = el => (el && el.value ? el.value.trim() : '');
            const setHTML = (el, html) => { if (el) el.innerHTML = html; };
            const setText = (el, text) => { if (el) el.textContent = text; };

            function upNombre(){ const v = val($nombre); v ? setText($pvNombre, v) : setHTML($pvNombre, PEND); }
            function upCorreo(){ const v = val($correo); v ? setText($pvCorreo, v) : setHTML($pvCorreo, PEND); }
            function upRol(){ const v = val($rol); v ? setText($pvRol, v) : setHTML($pvRol, PEND); }

            if ($nombre) $nombre.addEventListener('input', upNombre);
            if ($correo) $correo.addEventListener('input', upCorreo);
            if ($rol)    $rol.addEventListener('change', upRol);

            // ✅ Preview de la foto seleccionada
            const $inFoto = document.getElementById('inFoto');
            const $pvFoto = document.getElementById('pvFoto');
            if ($inFoto && $pvFoto) {
                $inFoto.addEventListener('change', function (e) {
                    const files = e.target.files || [];
                    if (files.length > 0) {
                        const file = files[0];
                        const url = URL.createObjectURL(file);
                        $pvFoto.src = url;
                    }
                });
            }

            // init
            upNombre(); upCorreo(); upRol();
        })();
    </script>
}


