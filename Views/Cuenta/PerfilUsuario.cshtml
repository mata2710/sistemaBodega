@model SistemaBodega.Models.Usuario
@{
    ViewData["Title"] = "Perfil de Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var rol = ViewBag.Rol as string ?? "Empleado";

    var fotoUrl = Url.Content(string.IsNullOrWhiteSpace(Model?.FotoFilePath)
        ? "~/img/perfil.png"
        : "~/" + Model.FotoFilePath);
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<style>
    .page-title {
        margin: 0;
    }

    .card.shadow-sm {
        border: 1px solid rgba(0,0,0,.06);
        border-radius: .75rem;
    }

    .btn-save {
        background: #437057 !important;
        color: #fff !important;
        border: 0 !important;
    }

        .btn-save:hover {
            filter: brightness(.95);
            color: #fff !important;
        }

        .btn-save:focus {
            box-shadow: 0 0 0 .2rem rgba(67,112,87,.25) !important;
        }

    .btn-home {
        background: #00809D !important;
        color: #fff !important;
        border: 0 !important;
    }

        .btn-home:hover {
            background: #00748A !important;
            color: #fff !important;
        }

    .avatar-uploader {
        position: relative;
        width: 112px;
        height: 112px;
        display: inline-block;
    }

        .avatar-uploader img {
            width: 112px;
            height: 112px;
            object-fit: cover;
            border-radius: 50%;
            border: 2px solid #e5e7eb;
            display: block;
        }

        .avatar-uploader .avatar-edit {
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: .25rem .6rem;
            border-radius: 999px;
            background: #00809D;
            color: #fff;
            border: 0;
            font-size: .825rem;
            line-height: 1;
            white-space: nowrap;
            cursor: pointer;
            text-decoration: none;
        }

            .avatar-uploader .avatar-edit:hover {
                background: #00748A;
            }

    .badge-soft-accent {
        background: #E7F6FC;
        color: #0B6073;
        border: 1px solid #B9E2ED;
        padding: .2rem .55rem;
        border-radius: 999px;
        font-weight: 600;
        font-size: .85rem;
    }

    .link-email {
        color: #00809D;
        text-decoration: none;
    }

        .link-email:hover {
            color: #00748A;
            text-decoration: underline;
        }

    .input-group-text i {
        opacity: .85;
    }
</style>

<div class="container py-4">
    <!-- Encabezado -->
    <div class="d-flex flex-wrap align-items-end justify-content-between gap-2 mb-3">
        <div>
            <h1 class="page-title">Perfil de usuario</h1>
            <p class="text-muted mb-0">Gestioná tu información personal y de acceso.</p>
        </div>

        <div class="d-flex gap-2">
            @if (rol == "Administrador")
            {
                <a href="/Admin/Usuarios" class="btn btn-warning" style="color:#111;border:0">
                    <i class="bi bi-people me-1"></i> Administrar usuarios
                </a>
            }
            <a href="~/" class="btn btn-home">
                <i class="bi bi-house-door me-1"></i> Volver a inicio
            </a>
        </div>
    </div>

    <!-- Mensajes -->
    @if (TempData["Ok"] != null)
    {
        <div class="alert alert-success rounded-3">@TempData["Ok"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger rounded-3">@TempData["Error"]</div>
    }

    <!-- Card principal -->
    <div class="card shadow-sm border-0 overflow-hidden">
        <div class="card-body p-4 p-md-5">
            <div class="row g-4 align-items-center mb-4">
                <div class="col-auto">
                    <div class="avatar-uploader">
                        <img id="fotoPreview" src="@fotoUrl" alt="Foto de perfil">
                        <label for="foto" class="avatar-edit"><i class="bi bi-image me-1"></i> Cambiar foto</label>
                    </div>
                </div>
                <div class="col">
                    <h4 class="mb-1">@Model.NombreCompleto</h4>
                    <div class="d-flex flex-wrap align-items-center gap-2">
                        <span class="badge-soft-accent">Rol: @Model.Rol</span>
                        <span class="text-muted">|</span>
                        <a href="mailto:@Model.Correo" class="link-email">@Model.Correo</a>
                    </div>
                </div>
            </div>

            <form method="post" asp-action="ActualizarPerfil" enctype="multipart/form-data" novalidate>
                @Html.AntiForgeryToken()

                <input asp-for="Id" type="hidden" />
                <input type="file" id="foto" name="Foto" accept="image/*" class="d-none" />

                <div asp-validation-summary="ModelOnly"
                     class="alert alert-danger rounded-3 mb-4"
                     role="alert"
                     style="display:@(ViewData.ModelState.IsValid ? "none" : "block")">
                    Revisa los campos marcados en rojo.
                </div>

                <!-- Datos básicos -->
                <div class="row g-3">
                    <div class="col-12">
                        <label asp-for="NombreCompleto" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person"></i></span>
                            <input asp-for="NombreCompleto" class="form-control form-control-lg" placeholder="Nombre y apellidos" />
                        </div>
                        <span asp-validation-for="NombreCompleto" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Correo" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Correo" class="form-control form-control-lg" placeholder="tu@correo.com" autocomplete="email" />
                        </div>
                        <span asp-validation-for="Correo" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Rol</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-gear"></i></span>
                            <input class="form-control form-control-lg" value="@Model.Rol" disabled />
                        </div>
                    </div>
                </div>

                <!-- Cédula y Teléfono (pre-cargados y editables) -->
                <div class="row g-3 mt-1">
                    <div class="col-md-6">
                        <label asp-for="Cedula" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-hash"></i></span>
                            <input asp-for="Cedula" class="form-control form-control-lg" placeholder="Ej.: 1-2345-6789" inputmode="numeric" />
                        </div>
                        <span asp-validation-for="Cedula" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Telefono" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                            <input asp-for="Telefono" class="form-control form-control-lg" placeholder="8888-8888" inputmode="tel" />
                        </div>
                        <span asp-validation-for="Telefono" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-flex flex-wrap gap-2 mt-4">
                    <button type="submit" class="btn btn-save btn-lg fw-semibold">
                        <i class="bi bi-check2"></i> Guardar cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Vista previa del avatar
        (function () {
            const input = document.getElementById('foto');
            const img = document.getElementById('fotoPreview');
            if (input && img) {
                input.addEventListener('change', (e) => {
                    const [file] = e.target.files || [];
                    if (file) img.src = URL.createObjectURL(file);
                });
            }
        })();
    </script>
}
