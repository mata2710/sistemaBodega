@model SistemaBodega.Models.Usuario
@{
    ViewData["Title"] = "Perfil de Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var rol = ViewBag.Rol as string ?? "Empleado";
}

<div class="container py-4">
    <!-- Encabezado -->
    <div class="d-flex flex-wrap align-items-end justify-content-between gap-2 mb-3">
        <div>
            <h1 class="page-title mb-1">Perfil de usuario</h1>
            <p class="text-muted mb-0">Gestioná tu información personal y de acceso.</p>
        </div>

        @if (rol == "Administrador")
        {
            <div class="d-flex gap-2">
                <a href="/Admin/Usuarios" class="btn btn-outline-secondary">Administrar usuarios</a>
                <a href="/Cuenta/PerfilUsuario" class="btn btn-outline-dark">Mi perfil</a>
            </div>
        }
    </div>

    <!-- Mensajes -->
    @if (TempData["Ok"] != null)
    {
        <div class="alert alert-success rounded-3">@TempData["Ok"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger rounded-3">@TempData["Error"]</div>
    }

    <!-- Card principal -->
    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="card-body p-4 p-md-5">
            <div class="row g-4 align-items-center mb-4">
                <div class="col-auto">
                    <div class="avatar-uploader">
                        <img id="fotoPreview" src="/img/perfil.png" alt="Foto de perfil">
                        <label for="foto" class="avatar-edit btn btn-sm btn-accent">Cambiar foto</label>
                    </div>
                </div>
                <div class="col">
                    <h4 class="mb-1">@Model.NombreCompleto</h4>
                    <div class="d-flex flex-wrap align-items-center gap-2">
                        <span class="badge-soft-accent">Rol: @Model.Rol</span>
                        <span class="text-muted">|</span>
                        <a href="mailto:@Model.Correo" class="link-email">@Model.Correo</a>
                    </div>
                </div>
            </div>

            <form method="post" asp-action="ActualizarPerfil" enctype="multipart/form-data" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" name="Id" value="@Model.Id" />
                <input type="file" id="foto" name="Foto" accept="image/*" class="d-none" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4" role="alert"
                     style="display:@(ViewData.ModelState.IsValid ? "none" : "block")">
                    Revisa los campos marcados en rojo.
                </div>

                <div class="row g-3">
                    <div class="col-12">
                        <label for="NombreCompleto" class="form-label fw-semibold">Nombre completo</label>
                        <input type="text" name="NombreCompleto" id="NombreCompleto"
                               class="form-control form-control-lg" value="@Model.NombreCompleto"
                               placeholder="Nombre y apellidos" required />
                        <span class="text-danger small">@Html.ValidationMessage("NombreCompleto")</span>
                    </div>

                    <div class="col-md-6">
                        <label for="Correo" class="form-label fw-semibold">Correo electrónico</label>
                        <input type="email" name="Correo" id="Correo"
                               class="form-control form-control-lg" value="@Model.Correo"
                               placeholder="tu@correo.com" autocomplete="email" required />
                        <span class="text-danger small">@Html.ValidationMessage("Correo")</span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Rol</label>
                        <input type="text" class="form-control form-control-lg" value="@Model.Rol" disabled />
                    </div>
                </div>

                <div class="d-flex flex-wrap gap-2 mt-4">
                    <button type="submit" class="btn btn-accent btn-lg fw-semibold">Guardar cambios</button>
                    <a asp-controller="Cuenta" asp-action="CambiarContrasena" class="btn btn-outline-secondary btn-lg">
                        Cambiar contraseña
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Vista previa del avatar
        const input = document.getElementById('foto');
        const img = document.getElementById('fotoPreview');
        if (input && img) {
            input.addEventListener('change', (e) => {
                const [file] = e.target.files || [];
                if (file) img.src = URL.createObjectURL(file);
            });
        }
    </script>
}

