@{
    ViewData["Title"] = "Restablecer contraseña";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body">
                <h2 class="text-center mb-4">Restablecer contraseña</h2>

                <!-- 🔹 Mensaje en caso de éxito -->
                @if (TempData["Mensaje"] != null)
                {
                    <div class="alert alert-success text-center">@TempData["Mensaje"]</div>
                }

                <!-- 🔸 Mensaje en caso de error -->
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center">@ViewBag.Error</div>
                }

                <form asp-action="Restablecer" asp-controller="Cuenta" method="post">
                    <input type="hidden" name="token" value="@ViewBag.Token" />

                    <div class="mb-3">
                        <label for="nuevaContrasena" class="form-label">Nueva contraseña</label>
                        <input type="password" name="nuevaContrasena" class="form-control" required />
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success">Guardar nueva contraseña</button>
                    </div>
                </form>

                <p class="mt-4 text-center">
                    <a asp-action="Login" asp-controller="Cuenta">Volver al inicio de sesión</a>
                </p>
            </div>
        </div>
    </div>
</div>


