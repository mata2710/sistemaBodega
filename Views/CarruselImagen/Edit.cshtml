@model SistemaBodega.Models.CarruselImagen

@{
    ViewData["Title"] = "Editar imagen del carrusel";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string? titulo = string.IsNullOrWhiteSpace(Model?.Titulo) ? null : Model!.Titulo;
    string ruta = string.IsNullOrWhiteSpace(Model?.RutaImagen) ? "" : Model!.RutaImagen;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<style>
    /* ===== Estructura y layout (coherente con Clientes) ===== */
    .section-title {
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: .75rem;
        padding-left: .65rem;
        border-left: 4px solid #00809D;
    }

    .card.shadow-sm {
        border: 1px solid rgba(0,0,0,.06);
    }

    .page-tools {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: .75rem;
    }

        .page-tools .btn {
            margin-top: 0 !important;
        }

    /* ===== Botones iguales a Clientes ===== */
    .btn-save {
        background: #437057 !important;
        color: #fff !important;
        border: 0 !important;
    }

        .btn-save:hover {
            filter: brightness(.95);
            background: #3a614c !important;
            color: #fff !important;
        }

        .btn-save:focus {
            box-shadow: 0 0 0 .2rem rgba(67,112,87,.25) !important;
        }

    .btn-cancel {
        background: #DC3C22 !important;
        color: #fff !important;
        border: 0 !important;
    }

        .btn-cancel:hover {
            background: #C3341E !important;
            color: #fff !important;
        }

        .btn-cancel:focus {
            box-shadow: 0 0 0 .2rem rgba(220,60,34,.25) !important;
        }

    /* Botón de cambiar imagen (estilo utilitario) */
    .btn-image {
        background: #00809D;
        color: #fff;
        border: 0;
        display: inline-flex;
        align-items: center;
        gap: .5rem;
        padding: .5rem .9rem;
        border-radius: .5rem;
        white-space: nowrap;
    }

        .btn-image:hover {
            background: #00748A;
            color: #fff;
        }

        .btn-image:focus {
            box-shadow: 0 0 0 .2rem rgba(0,128,157,.2);
        }

    .text-help {
        font-size: .85rem;
        color: #6c757d;
    }

    /* ===== Input group con icono ===== */
    .input-group-text i {
        opacity: .85;
    }

    /* ===== Preview de imagen con overlay de título ===== */
    .preview-wrap {
        position: relative;
        width: 100%;
        aspect-ratio: 16/9;
        border-radius: .75rem;
        overflow: hidden;
        border: 1px solid #e5e7eb;
        background: #f8fafc;
    }

        .preview-wrap img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }

    .preview-overlay {
        position: absolute;
        left: 0;
        right: 0;
        bottom: 0;
        padding: .75rem .9rem;
        background: linear-gradient(transparent, rgba(0,0,0,.55));
        color: #fff;
    }

    .preview-title {
        margin: 0;
        font-weight: 700;
        font-size: 1rem;
        line-height: 1.2;
        text-shadow: 0 1px 2px rgba(0,0,0,.4);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Badge “Pendiente” (consistente) */
    .badge-pending {
        background: #EAC8A6;
        color: #3d2b12;
        border: 1px solid #EAC8A6;
        padding: .2rem .55rem;
        border-radius: 999px;
        font-weight: 600;
        font-size: .85rem;
    }
</style>

<div class="page-tools mt-3 mb-3">
    <h2 class="mb-0">Editar imagen</h2>
    <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
        <i class="bi bi-arrow-left-short"></i> Volver al listado
    </a>
</div>

<div class="row g-3">
    <!-- Columna izquierda: formulario -->
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <!-- IMPORTANTE: enctype para subida de archivo -->
                <form asp-action="Edit" method="post" enctype="multipart/form-data" novalidate>
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly"
                         class="alert alert-danger rounded-3 mb-3"
                         role="alert"
                         style="display:@(ViewData.ModelState.IsValid ? "none" : "block")">
                        Revisa los campos marcados en rojo.
                    </div>

                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="RutaImagen" />

                    <div class="mb-3">
                        <label asp-for="Titulo" class="form-label">Título</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-type"></i></span>
                            <input asp-for="Titulo" class="form-control form-control-lg" id="inTitulo" placeholder="Texto a mostrar sobre la imagen" />
                        </div>
                        <span asp-validation-for="Titulo" class="text-danger small"></span>
                    </div>

                    <!-- Cambiar imagen -->
                    <div class="mb-2">
                        <label class="form-label fw-semibold d-block">Cambiar imagen</label>

                        <!-- input file oculto + botón estilizado -->
                        <input type="file" id="inImagen" name="imagen" accept="image/*" class="d-none" />
                        <button type="button" class="btn-image" id="btnCambiarImagen">
                            <i class="bi bi-image"></i> Cambiar imagen
                        </button>
                        <div class="text-help mt-1">
                            Formatos aceptados: JPG, PNG, WebP. Se reemplazará la imagen actual.
                        </div>
                    </div>

                    <div class="d-flex flex-wrap gap-2 mt-3">
                        <button type="submit" class="btn btn-save">
                            <i class="bi bi-check2"></i> Guardar cambios
                        </button>
                        <a asp-action="Index" class="btn btn-cancel">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Columna derecha: preview -->
    <div class="col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="section-title">Vista previa</div>
                <div class="preview-wrap">
                    <img id="pvImg" src="~/@ruta" alt="Imagen del carrusel" onerror="this.style.opacity='0.3';" />
                    <div class="preview-overlay">
                        <p class="preview-title" id="pvTitulo">
                            @if (titulo == null)
                            {
                                <span class="badge-pending">Pendiente</span>
                            }
                            else
                            {
                                @titulo
                            }
                        </p>
                    </div>
                </div>
                <div class="mt-2 text-muted small">
                    Ruta actual: <span class="text-break">~/@ruta</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        (function () {
            const pending = '<span class="badge-pending">Pendiente</span>';
            const inputTitulo = document.getElementById('inTitulo');
            const pvTitulo = document.getElementById('pvTitulo');

            function setPreviewTitle(val) {
                if (!pvTitulo) return;
                var v = (val || '').trim();
                pvTitulo.innerHTML = v.length ? v : pending;
            }
            if (inputTitulo) {
                inputTitulo.addEventListener('input', function () {
                    setPreviewTitle(inputTitulo.value);
                });
                setPreviewTitle(inputTitulo.value);
            }

            // ---- Cambiar imagen (preview inmediato) ----
            const btnCambiar = document.getElementById('btnCambiarImagen');
            const inImagen = document.getElementById('inImagen');
            const pvImg = document.getElementById('pvImg');

            if (btnCambiar && inImagen) {
                btnCambiar.addEventListener('click', function () {
                    inImagen.click();
                });
                inImagen.addEventListener('change', function (e) {
                    const file = e.target.files && e.target.files[0];
                    if (!file) return;
                    // Preview inmediato
                    const url = URL.createObjectURL(file);
                    if (pvImg) pvImg.src = url;
                });
            }
        })();
    </script>
}
