@model SistemaBodega.Models.CarruselImagen

@{
    ViewData["Title"] = "Eliminar Imagen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4 text-white">
    <h2>Eliminar Imagen</h2>
    <div class="alert alert-danger">
        ¿Está seguro que desea eliminar esta imagen?
    </div>

    <div class="mb-3">
        <img src="~/@Model.RutaImagen" alt="Imagen carrusel" class="img-fluid" style="max-height: 200px;" />
        <p><strong>Título:</strong> @Model.Titulo</p>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
