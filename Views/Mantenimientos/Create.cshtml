@model SistemaBodega.Models.Mantenimiento
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Crear mantenimiento";
}

<h1>Crear mantenimiento</h1>

<h4>Mantenimiento</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <!-- Muestra errores de modelo y de campos -->
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Bodega -->
            <div class="mb-3">
                <label asp-for="IdBodega" class="form-label"></label>
                <select asp-for="IdBodega"
                        class="form-select"
                        asp-items="ViewBag.IdBodega">
                    <option value="">Seleccione...</option>
                </select>
                <span asp-validation-for="IdBodega" class="text-danger"></span>
            </div>

            <!-- Fecha -->
            <div class="mb-3">
                <label asp-for="FechaMantenimiento" class="form-label"></label>
                <input asp-for="FechaMantenimiento" class="form-control" type="date" />
                <span asp-validation-for="FechaMantenimiento" class="text-danger"></span>
            </div>

            <!-- Tipo -->
            <div class="mb-3">
                <label asp-for="TipoMantenimiento" class="form-label"></label>
                <input asp-for="TipoMantenimiento" class="form-control" list="tiposMantenimiento" placeholder="Ej.: Preventivo" />
                <datalist id="tiposMantenimiento">
                    <option value="Preventivo"></option>
                    <option value="Correctivo"></option>
                    <option value="Inspección"></option>
                    <option value="Limpieza"></option>
                </datalist>
                <span asp-validation-for="TipoMantenimiento" class="text-danger"></span>
            </div>

            <!-- Costo -->
            <div class="mb-3">
                <label asp-for="Costo" class="form-label"></label>
                <input asp-for="Costo" class="form-control" type="number" step="0.01" min="0" placeholder="Ej.: 150.00" />
                <span asp-validation-for="Costo" class="text-danger"></span>
            </div>

            <!-- Empresa -->
            <div class="mb-3">
                <label asp-for="EmpresaResponsable" class="form-label"></label>
                <input asp-for="EmpresaResponsable" class="form-control" placeholder="Ej.: ACME S.A." />
                <span asp-validation-for="EmpresaResponsable" class="text-danger"></span>
            </div>

            <!-- Comentarios (opcional) -->
            <div class="mb-3">
                <label asp-for="ComentariosAdministracion" class="form-label"></label>
                <textarea asp-for="ComentariosAdministracion" class="form-control" rows="3" placeholder="Notas y comentarios..."></textarea>
                <span asp-validation-for="ComentariosAdministracion" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Crear</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Volver al listado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
