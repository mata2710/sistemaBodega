@model IEnumerable<SistemaBodega.Models.Mantenimiento>
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Mantenimientos";
    var rol = Context.Session.GetString("Rol");
}

<h1 class="mt-4">Mantenimientos</h1>

@if (rol == "Administrador")
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Crear nuevo mantenimiento</a>
    </p>
}

<table class="table table-bordered table-striped align-middle">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.FechaMantenimiento)</th>
            <th>@Html.DisplayNameFor(model => model.TipoMantenimiento)</th>
            <th>@Html.DisplayNameFor(model => model.Costo)</th>
            <th>@Html.DisplayNameFor(model => model.EmpresaResponsable)</th>
            <th>Bodega</th>
            <th>@Html.DisplayNameFor(model => model.ComentariosAdministracion)</th>
            <th style="width:220px">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.FechaMantenimiento.ToString("yyyy-MM-dd")</td>
                    <td>@item.TipoMantenimiento</td>
                    <td>@item.Costo.ToString("N2")</td>
                    <td>@(string.IsNullOrWhiteSpace(item.EmpresaResponsable) ? "—" : item.EmpresaResponsable)</td>
                    <td>@(item.Bodega?.Nombre ?? "—")</td>
                    <td>
                        @{
                            var c = item.ComentariosAdministracion;
                            if (string.IsNullOrWhiteSpace(c))
                            {
                                @:—
                            }
                            else
                            {
                                var corto = c.Length > 120 ? c.Substring(0, 120) + "…" : c;
                                @corto
                            }
                        }
                    </td>
                    <td>
                        @if (rol == "Administrador")
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-white btn-editar">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-1 btn-eliminar">Eliminar</a>
                        }
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white ms-1 btn-detalles">Detalles</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center text-muted">No hay mantenimientos registrados.</td>
            </tr>
        }
    </tbody>
</table>
