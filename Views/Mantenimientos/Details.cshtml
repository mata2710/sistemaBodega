@model SistemaBodega.Models.Mantenimiento

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Mantenimiento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.FechaMantenimiento)</dt>
        <dd class="col-sm-9">@Model.FechaMantenimiento.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.TipoMantenimiento)</dt>
        <dd class="col-sm-9">@Model.TipoMantenimiento</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Costo)</dt>
        <dd class="col-sm-9">@Model.Costo.ToString("N2")</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.EmpresaResponsable)</dt>
        <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.EmpresaResponsable) ? Model.EmpresaResponsable : "—")</dd>

        <dt class="col-sm-3">Bodega</dt>
        <dd class="col-sm-9">@((Model.Bodega?.Nombre) ?? "—")</dd>

        <dt class="col-sm-3">Comentarios</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrWhiteSpace(Model?.ComentariosAdministracion))
            {
                <pre class="mb-0" style="white-space:pre-wrap">@Model.ComentariosAdministracion</pre>
            }
            else
            {
                @:—
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Volver al listado</a>
</div>
