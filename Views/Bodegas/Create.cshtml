@model SistemaBodega.Models.Bodega

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Bodega</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Ubicacion" class="control-label"></label>
                <input asp-for="Ubicacion" class="form-control" />
                <span asp-validation-for="Ubicacion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Complejo" class="control-label"></label>
                <input asp-for="Complejo" class="form-control" />
                <span asp-validation-for="Complejo" class="text-danger"></span>
            </div>

            <!-- Estado como dropdown -->
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="form-select">
                    <option value="">Seleccione...</option>
                    <option>Disponible</option>
                    <option>Ocupada</option>
                    <option>Reservada</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <!-- Campos base para el cálculo -->
            <div class="form-group">
                <label asp-for="AreaM2" class="control-label"></label>
                <input asp-for="AreaM2" class="form-control" type="number" step="0.01" min="0" placeholder="Ej.: 120.50" />
                <span asp-validation-for="AreaM2" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PrecioAlquilerPorM2" class="control-label"></label>
                <input asp-for="PrecioAlquilerPorM2" class="form-control" type="number" step="0.01" min="0" placeholder="Ej.: 8.75" />
                <span asp-validation-for="PrecioAlquilerPorM2" class="text-danger"></span>
            </div>

            <!-- Preview informativo -->
            <div class="form-group">
                <label class="control-label">Precio estimado</label>
                <input id="precioPreview" class="form-control" type="text" value="0.00" readonly />
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        (function () {
            const areaInput = document.getElementById('@Html.IdFor(m => m.AreaM2)');
            const precioM2Input = document.getElementById('@Html.IdFor(m => m.PrecioAlquilerPorM2)');
            const preview = document.getElementById('precioPreview');

            function toNumber(v) {
                if (typeof v === 'string') v = v.replace(',', '.');
                const n = parseFloat(v);
                return isNaN(n) ? 0 : n;
            }

            function updatePreview() {
                const area = toNumber(areaInput.value);
                const precioM2 = toNumber(precioM2Input.value);
                const total = area * precioM2;
                preview.value = total.toFixed(2);
            }

            areaInput.addEventListener('input', updatePreview);
            precioM2Input.addEventListener('input', updatePreview);
            updatePreview();
        })();
    </script>
}
